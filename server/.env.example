# OAuth Provider Configuration
# OAuth providers client credentials for authentication

# Application Settings
APP_URL=http://localhost:5000

# VK ID OAuth Configuration
VK_CLIENT_ID=your_vk_client_id_here
VK_CLIENT_SECRET=your_vk_client_secret_here

# Yandex ID OAuth Configuration  
YANDEX_CLIENT_ID=your_yandex_client_id_here
YANDEX_CLIENT_SECRET=your_yandex_client_secret_here

# Sberbank ID OAuth Configuration (future implementation)
SBERBANK_CLIENT_ID=your_sberbank_client_id_here
SBERBANK_CLIENT_SECRET=your_sberbank_client_secret_here

# T-Bank ID OAuth Configuration (future implementation)
TBANK_CLIENT_ID=your_tbank_client_id_here
TBANK_CLIENT_SECRET=your_tbank_client_secret_here

# ESIA (Gosuslugi) OAuth Configuration (future implementation)
ESIA_CLIENT_ID=your_esia_client_id_here
ESIA_CLIENT_SECRET=your_esia_client_secret_here

# Existing application environment variables
# Database
DATABASE_URL=your_database_url_here

# Session management
SESSION_SECRET=your_session_secret_here

# Replit Auth (if using)
REPL_ID=your_repl_id_here
ISSUER_URL=https://replit.com/oidc
REPLIT_DOMAINS=your_domain.repl.co

# Cookie settings
COOKIE_DOMAIN=.your-domain.com

# Email service (if using SendGrid)
SENDGRID_API_KEY=your_sendgrid_api_key_here
FROM_EMAIL=noreply@your-domain.com

# Security
NODE_ENV=development